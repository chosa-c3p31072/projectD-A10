package com.example.artrialapp; // あなたのプロジェクトのパッケージ名に合わせてください

import android.os.Bundle;
import android.widget.ListView;
import androidx.appcompat.app.AppCompatActivity;

import java.util.ArrayList;
import java.util.List;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        ListView mainMenu = findViewById(R.id.main_menu_list);

        List<MenuItem> menuItems = new ArrayList<>();
        menuItems.add(new MenuItem("ユーザー情報", R.drawable.ic_user));
        menuItems.add(new MenuItem("試着カメラ", R.drawable.ic_camera));
        menuItems.add(new MenuItem("試着履歴", R.drawable.ic_history));
        menuItems.add(new MenuItem("帽子カタログ", R.drawable.ic_hat));
        menuItems.add(new MenuItem("似合い度", R.drawable.ic_fit));

        // カスタムアダプターを作成
        MainMenuAdapter adapter = new MainMenuAdapter(this, menuItems);
        mainMenu.setAdapter(adapter);

        // 各項目クリック時の処理を設定 (例: トースト表示)
        mainMenu.setOnItemClickListener((parent, view, position, id) -> {
            MenuItem clickedItem = (MenuItem) parent.getItemAtPosition(position);
            // ここで各項目に応じた処理を記述します。
            // 例: 新しいアクティビティを開始する
            // Intent intent;
            // switch (position) {
            //     case 0: // ユーザー情報
            //         intent = new Intent(MainActivity.this, UserInfoActivity.class);
            //         startActivity(intent);
            //         break;
            //     case 1: // 試着カメラ
            //         intent = new Intent(MainActivity.this, CameraActivity.class);
            //         startActivity(intent);
            //         break;
            //     // 他の項目も同様に
            // }
            android.widget.Toast.makeText(MainActivity.this, clickedItem.getText() + "がクリックされました", android.widget.Toast.LENGTH_SHORT).show();
        });
    }
}
